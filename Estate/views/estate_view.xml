<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id='estate_property_action' model='ir.actions.act_window'>
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availibilty"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedroom"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="state"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="postcode"/>
                        <field name="date_availibilty"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="bedroom"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="garage"/>
                        <field name="garden"/>
                        <field name="state"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                        <field name="active"/>  
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="first_level_menu" name="Real estate">
        <menuitem id="menu_finance_receivables" name="proper   ties" sequence="1">
            <menuitem id="menu_pro" name="property menu" action="estate_property_action"/>
            <menuitem id="menu_pro_seting" name="Setting" action="estate_property_action"/>
            <menuitem id="menu_pro_ava" name="Availability" action="estate_property_action"/>
            <menuitem id="menu_action_move_out_invoice_type" action="estate_property_action"/>

        </menuitem>


        <menuitem id="menu_advertisement" name="Advertisement" sequence="2">
            <menuitem id="menu_adv_market" name="Marketing" action="estate_property_action"/>
            <menuitem id="menu_adv_bs" name="Buy/sell" action="estate_property_action"/>
            <menuitem id="menu_adv_dis" name="Discount" action="estate_property_action"/>
            <menuitem id="menu_advert" action="estate_property_action"/>
        </menuitem>


    </menuitem>




