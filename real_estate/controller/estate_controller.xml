<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_link" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/estate_details</field>
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence">99</field>
    </record>

    <template id="estate_id">
        <t t-call="website.layout">
            <t t-set="title">Estates Property</t>
            <div class="oe_structure">
                <div class="container">
                    <center>
                        <h2>Property Details</h2>
                    </center>
                    <br />
                    <div class="row">
                        <t t-foreach="records" t-as="property">
                            <div class="col-md-4">
                                <div class="card"
                                    style="width:300px;margin:20px;">
                                    <div class="card-block">
                                        <center>
                                            <img
                                                t-attf-src="data:image/png;base64,{{property.pro_image}}"
                                                class="card-img-top embed-responsive-item"
                                                style="width: 18rem; height: 10rem;"
                                                alt="Property Image" />
                                        </center>
                                    </div>

                                    <div class="card-body">
                                        <a t-attf-href="/property/{{property.name}}">
                                            <h3>
                                                <t t-esc="property.name" />
                                            </h3>
                                        </a>
                                        <p>Expected price : <t t-esc="property.expected_price" />
                                        </p>
                                        <p>Description <t t-esc="property.description" />
                                        </p>
                                        <p>
                                        </p>
                                        <a t-attf-href="/estate/{{ slug(property) }} "
                                            class="btn btn-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
        <div class="products_pager form-inline justify-content-center mt-3">
            <t t-call="website.pager">
                <t t-set="_classes">mt-2 ml-md-2</t>
                <t t-raw="pager"></t>
            </t>
        </div>
    </template>
</odoo>