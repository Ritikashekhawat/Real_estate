<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="price" string="Price"></field>
                <field name="partner_id" string="Partner"></field>
                <field name="Validity" string="Validity"></field>
                <field name="date_deadline" />
                <field name="status" string="Status" readonly="True" />
                <button name="action_accept"  type="object" title="Accept" icon="fa-check" attrs="{'invisible':[('status','!=',False)]}" />
                <button name="action_refuse" type="object" title="Refuse" icon="fa-times" attrs="{'invisible':[('status','!=',False)]}"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status"/>
                        <field name="Validity" />
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>