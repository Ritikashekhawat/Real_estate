<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id='estate_property_action' model='ir.actions.act_window'>
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>


    <!-- tree view -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'OR'" decoration-danger="state == 'OA'"
                decoration-muted="state == 'S'" decoration-bf="state == 'OA'">
                <header>
                    <button name="action_make_offer" type="object" string="Add Offer"
                        class="btn-secondary" />
                </header>
                <field name="name" />
                <field name="description" />
                <field name="postcode" />
                <field name="date_availibilty" optional="hide" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedroom" />
                <field name="living_area" />
                <field name="state" />
                <field name="facades" optional='hide' />
                <field name="garage" optional="hide" />
                <field name="garden" optional="hide" />
                <field name="state" invisible="1" />
                <field name="garden_area" optional="hide" />
                <field name="garden_orientation" optional="hide" />
                <field name="active" />
                <field name="property_type_id" />
                <field name="user_id" />
                <field name="buyer_id" />
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_sold" type="object" string="Sold"
                       invisible="state in ['S', 'c']"/>
                    <button name="action_cancel" type="object" string="Cancel"
                       invisible="state in ['S', 'c']"/>
                    <field name="state" widget="statusbar" statusbar_visible="N,OR,OA,S" />
                </header>
                <sheet>
                    <group>
                        <field name="pro_image" class="oe_avatar" widget="image" />
                    </group>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                        </group>
                        <group>
                            <field name="state" />
                            <field name="property_type_id"
                                options="{'no_edit': True, 'no_create':True}" />

                            <field name="postcode" />
                            <field name="date_availibilty" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_offer" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description" />
                                        <field name="bedroom" />
                                        <field name="living_area" />
                                        <field name="facades" />
                                        <field name="garage" />
                                        <field name="garden" />
                                    </group>
                                    <group>
                                        <field name="garden_area"
                                            invisible="garden == 'False'"/>
                                        <field name="garden_orientation"
                                            invisible="garden == 'False'"/>
                                        <field name="active" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids"
                                    invisible="state in ['OA','S', 'c']" />
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="user_id" />
                                    <field name="buyer_id" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search Bar -->

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate property">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedroom" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <filter string="Available" name="available" domain="[('state', 'in', ('N','OR'))]" />
                <filter string="Archived" name="active" domain="[('active', '=' , False)]" />
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- kanban -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban disable_drag_drop_record="true" default_group_by="property_type_id"
                class="o_kanban_mobile">
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                            </div>
                            <div> Expected Price: <field name="expected_price" />
                            </div>
                            <div t-if="record.state == 'OR'"> Best Offer: <field
                                    name="best_offer" />
                            </div>
                            <div t-if="record.selling_price"> Selling Price: <field
                                    name="selling_price" />
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <menuitem id="first_level_menu" name="Real Estate">
        <menuitem id="menu_finance_receivables" name="Advertisement">
            <menuitem id="menu_pro" name="property" action="estate_property_action" />
        </menuitem>
    </menuitem>

    <menuitem id="menu_setting" name="Setting" parent="first_level_menu" />
    <menuitem id="menu_pro_type" name="property Type" parent="menu_setting"
        action="real_estate.estate_property_type_action" />
    <menuitem id="menu_pro_tag" name="property Tag" parent="menu_setting"
        action="real_estate.estate_property_tag_action" />

</odoo>